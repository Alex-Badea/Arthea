<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".activities.SettingsActivity">

    <com.shiba.arthea.views.MyButton
        android:id="@+id/activity_settings_updatetraits_button"

        android:text="Fetch traits from DB"
        android:textAllCaps="false"
        android:textColor="#FFEF87"
        android:textSize="25sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.shiba.arthea.views.MyButton
        android:id="@+id/activity_settings_changename_button"

        android:text="Change your name"
        android:textAllCaps="false"
        android:textColor="#FFEF87"
        android:textSize="30sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/activity_settings_updatetraits_button"
        android:layout_alignStart="@+id/activity_settings_updatetraits_button"
        android:layout_marginTop="8dp" />

</RelativeLayout>
